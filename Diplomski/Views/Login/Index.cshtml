@model Diplomski.Models.ViewModels.LoginVM

@using (Html.BeginForm("Provjera", "Login", new { @class = "form-signin" }))
{
    <div class="container-fluid">
        <div class="card card-login mx-auto mt-5" style="width:300px">
            <div class="card-header" style="text-align:center;font-size:10px;">Aplikacija za evidenciju prisustva studenata na nastavi i ispitima FIT-a pomoću RFID identifikacijskog sistema</div>
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label for="username" style="font-weight:bold">Broj dosijea:</label>
                        @Html.TextBoxFor(model => model.BrojDosijea, new { @class = "form-control" })
                      
                    </div>
                    <div class="form-group">
                        <label for="password" style="font-weight:bold">Lozinka:</label>
                        @Html.PasswordFor(model => model.Lozinka, new { @class = "form-control" })
                       
                    </div>
                    <label style="color:red">@(Model.Poruka==null?"":Model.Poruka)</label>
                    <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Prijava</button>
                </form>
                
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    <style>
      body{
         background-color:lightgray
      }
    </style>
}
