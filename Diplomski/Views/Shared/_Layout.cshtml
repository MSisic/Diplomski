@using Diplomski.Helper;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistem za evidenciju prisustva na predavanjima i ispitima na FIT-a</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    @*@Html.ActionLink("Početna", "Index", "", new { area = "" }, new { @class = "navbar-brand" })
        @Html.ActionLink("Studenti", "Index", "Student", new { area = "ModulReferent" }, new { @class = "navbar-brand" })
        @Html.ActionLink("Profesori", "Index", "NastavnoOsoblje", new { area = "ModulReferent" }, new { @class = "navbar-brand" })
        @Html.ActionLink("Predmeti", "Index", "Predmet", new { area = "ModulReferent" }, new { @class = "navbar-brand" })*@
    @if (Autentifikacija.KorisnikSesija != null)
    {

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            @Html.ActionLink("Početna", "Index", "", new { area = "" }, new { @class = "navbar-brand" })

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Studenti", "Index", "Student", new { area = "ModulReferent" }, new { @class = "nav-link" })<span class="sr-only"></span>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Profesori", "Index", "NastavnoOsoblje", new { area = "ModulReferent" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Predmeti", "Index", "Predmet", new { area = "ModulReferent" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Aktivnosti", "Index", "Aktivnost", new { area = "ModulNastavnoOsoblje" }, new { @class = "nav-link" })
                    </li>

                </ul>
            </div>
        </nav>
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FIT - Mirza Šišić</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>